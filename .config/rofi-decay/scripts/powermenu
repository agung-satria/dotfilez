case "$chosen" in
	"ğŸ“´ Power Off") poweroff ;;
	"ğŸ”ƒ Reboot") reboot ;;
	"ğŸ’¤ Suspend") systemctl suspend ;;
	"ğŸ» Hibernate") systemctl hibernate ;;
    "ğŸšª Log Out") loginctl terminate-user $USER ;;
