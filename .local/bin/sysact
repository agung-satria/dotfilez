#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

# color emoji (noto)ğŸ–¥ï¸
case "$(printf "ğŸ”’lock\nğŸšªleave dwm\nğŸ“´ shutdown\nğŸ”ƒ restart\nğŸ’¤ sleep\nğŸ» hibernate\nâ™»ï¸ renew dwm\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’lock') betterlockscreen -l ;;
	'ğŸšªleave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ“´ shutdown') $ctl poweroff -i ;;
	'ğŸ”ƒ restart') $ctl reboot -i ;;
	'ğŸ» hibernate') $ctl hibernate && betterlockscreen -l ;;
	'ğŸ’¤ sleep') $ctl suspend && betterlockscreen -l ;;
	'â™»ï¸ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac

