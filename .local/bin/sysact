#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

# color emoji (noto)ğŸ–¥ï¸
case "$(printf "ğŸ”’Lock\nğŸšªLogout\nğŸ“´ Shutdown\nğŸ”ƒ Restart\nğŸ’¤ Sleep\nğŸ“º Display Off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’Lock') lockwithsound ;;
	'ğŸšªLogout') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" && snd-logoff ;;
	'ğŸ“´ Shutdown') snd-shutdown >/dev/null 2>&1 && $ctl poweroff -i ;;
	'ğŸ”ƒ Restart') snd-notify >/dev/null 2>&1 && $ctl reboot -i ;;
	'ğŸ’¤ Sleep') $ctl suspend && lockwithsound ;;
	'ğŸ“º Display Off') xset dpms force off ;;
	*) exit 1 ;;
esac

