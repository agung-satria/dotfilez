#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

# color emoji (noto)🖥️
case "$(printf "🔒Lock\n🚪Logout\n📴 Shutdown\n🔃 Restart\n💤 Sleep\n📺 Display Off" | dmenu -i -p 'Action: ')" in
	'🔒Lock') lockwithsound ;;
	'🚪Logout') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" && snd-logoff ;;
	'📴 Shutdown') snd-shutdown >/dev/null 2>&1 && $ctl poweroff -i ;;
	'🔃 Restart') snd-notify >/dev/null 2>&1 && $ctl reboot -i ;;
	'💤 Sleep') $ctl suspend && lockwithsound ;;
	'📺 Display Off') xset dpms force off ;;
	*) exit 1 ;;
esac

