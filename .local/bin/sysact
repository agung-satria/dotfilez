# nerd
case "$(printf "ï€£  lock\nï¡‚  Logout\nï€‘  Poweroff\nî«’  Reboot\nâ¾ Suspend\nï¦±  Hibernate\nï±¢  Display off" | dmenu -i -p 'Action: ')" in
	'ï€£  lock') betterlockscreen -l ;;
	'ï¡‚  Logout') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ï€‘  Poweroff') $ctl poweroff -i ;;
	'î«’  Reboot') $ctl reboot -i ;;
	'ï¦±  Hibernate') $ctl hibernate && betterlockscreen -l ;;
	'â¾ Suspend') $ctl suspend && betterlockscreen -l ;;
	'ï±¢  Display off') xset dpms force off ;;
	*) exit 1 ;;
esac
