#!/bin/sh

get_temp_cpu0=$(cat /sys/class/thermal/thermal_zone0/temp)
temp_cpu0=$(($get_temp_cpu0/1000))
echo " " $temp_cpu0"°C "
# echo " 🌡️" $temp_cpu0"°C "
# echo $temp_cpu0"°C"
case $BLOCK_BUTTON in
	1) notify-send "🌡️ CPU temperature $temp_cpu0°C" ;;
 	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
