#!/bin/bash
bat() {
  batstat="$(cat /sys/class/power_supply/BAT0/status)"
  battery="$(cat /sys/class/power_supply/BAT0/capacity)"
  if [[ $batstat = 'Unknown' ]] || [[ $batstat = 'Charging' ]]; then
    batstat="  ğŸ”‹ïƒ§$battery% "
    # batstat="ï–ƒïƒ§$battery%"
    # batstat="ï–ƒ$battery%" 
  elif [[ $battery -ge 5 ]] && [[ $battery -le 10 ]]; then
    batstat="  ğŸª«ï„ª$battery% "
    # batstat="ï–‚ï„ª$battery%"
    # batstat="ï–‚$battery%" 
  elif [[ $battery -ge 11 ]] && [[ $battery -le 20 ]]; then
    batstat="ğŸª«$battery%"
    # batstat="ï‰ƒ   $battery%"
    # batstat="ï•¹$battery%" 
  elif [[ $battery -ge 21 ]] && [[ $battery -le 30 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰ƒ   $battery%"
    # batstat="ï•º$battery%" 
  elif [[ $battery -ge 31 ]] && [[ $battery -le 40 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰ƒ   $battery%"
    # batstat="ï•»$battery%" 
  elif [[ $battery -ge 41 ]] && [[ $battery -le 50 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰‚   $battery%"
    # batstat="ï•¼$battery%" 
  elif [[ $battery -ge 51 ]] && [[ $battery -le 60 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰‚   $battery%"
    # batstat="ï•½$battery%" 
  elif [[ $battery -ge 61 ]] && [[ $battery -le 70 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰   $battery%"
    # batstat="ï•¾$battery%" 
  elif [[ $battery -ge 71 ]] && [[ $battery -le 80 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰   $battery%"
    # batstat="ï•¿$battery%" 
  elif [[ $battery -ge 81 ]] && [[ $battery -le 90 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰   $battery%"
    # batstat="ï–€$battery%" 
  elif [[ $battery -ge 91 ]] && [[ $battery -le 95 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰€   $battery%"
    # batstat="ï–$battery%" 
  elif [[ $battery -ge 96 ]] && [[ $battery -le 100 ]]; then
    batstat="ğŸ”‹$battery%"
    # batstat="ï‰€   $battery%"
    batstat="ï•¸$battery%" 

  fi
  echo "$batstat"
}
battery="$(cat /sys/class/power_supply/BAT0/capacity)"
case $BLOCK_BUTTON in
  1) notify-send "ğŸ”‹ Battery percentage $battery%" ;;
  6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac; echo "$(bat)"
