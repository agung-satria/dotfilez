#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint, otherwise assumed /.
# 

location=${1:-/}

[ -d "$location" ] || exit

case $BLOCK_BUTTON in
	1) notify-send "ğŸ’½ Drive Usage :"$(df -h "$location" | awk ' /[0-9]/ {print $3 "/" $2}')"" ;;
	2) notify-send "ğŸ’½ Disk module" "\ï‘„ Shows used hard drive space.
ï‘„ Right Click to show all disk info." ;;
	3) notify-send "ğŸ’½ Disk space" "$(df -h --output=target,used,size)" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$location" in
	"/home"* ) icon="ğŸ " ;;
	"/mnt"* ) icon="ğŸ’¾" ;;
	# *) icon="ğŸ’½";;
	*) icon="î‰†    ";;
esac

# printf "%s%s\n" "$icon" "$(df -h "$location" | awk ' /[0-9]/ {print $3 "/" $2}')"
printf "$icon"
