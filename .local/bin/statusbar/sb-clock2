#!/bin/bash

function runthismonth() {
  if ! command -v calcurse &> /dev/null
  then
    notify-send "ÔÅ± calcurse is not installed"
    exit
  else
    notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)"
  fi
}

function runhelp() {
  if ! command -v calcurse &> /dev/null
  then
    notify-send "ÔÅ± calcurse is not installed"
    exit
  else
    notify-send "üìÖ Time/date module" "\ÔëÑ Middle click to toggle Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
ÔëÑ Middle click to toggle Right click opens calcurse if installed"
  fi
}

function runcalcurse() {
  if ! command -v calcurse &> /dev/null
  then
    notify-send "ÔÅ± calcurse is not installed"
    exit
  else
    st -c float-st -g 100x25+350+200 calcurse
  fi
}

case $BLOCK_BUTTON in
	# 1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" ;;
	1) $HOME/.config/eww/eww2/launch_date ;;
	2) runcalcurse ;;
	# 2) runhelp ;;
	3) runthismonth ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

echo "$(date "+%a, %b %d  %I:%M %p")" #12hr
